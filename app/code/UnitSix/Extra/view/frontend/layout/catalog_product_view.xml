<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
      <referenceBlock name="product.info.details">
        <block class="UnitSix\Extra\Block\Product\ExtraTab" name="product.info.video" template="UnitSix_Extra::product/extra_tab.phtml" group="detailed_info">
            <arguments>
                <argument name="at_code" xsi:type="string">extra</argument>
                <argument name="css_class" xsi:type="string">extra</argument>
                <argument name="at_label" xsi:type="string">none</argument>
                <argument name="title" translate="true" xsi:type="string">Extra Information</argument>
            </arguments>
            </block>
</referenceBlock>
    </body>
</page>
